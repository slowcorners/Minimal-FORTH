                              ;	example program printing out the character set to the terminal
                              
                                      ORG     0x8000      ; set PC to start address of the program
                              
8000 00                       outb:   DB      0
8001 00                       outc:   DB      0
                              
8002 0E 20                    start:  LDI     32          ; write <SPC> into outb
8004 16 00 80                         STA     outb        ; :
8007 15 00 80                 next:   LDA     outb        ; :
800A 02                               OUT                 ; outputs A to terminal (alternatively use STA $8000)
800B 0E 08                            LDI     8           ; Wait a little
800D 16 01 80                         STA     outc
8010 27 01 80                 wait:   DEB     outc
8013 3A 10 80                         BNE     wait
8016 26 00 80                         INB     outb        ; increment outb
8019 3E 07 80                         BPL     next        ; A < 128? jump back to label 'next'
801C 14 02 80                         JPA     start       ; jump to 'start' address
